<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>question</servlet-name>
        <servlet-class>controller.QuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>quiz</servlet-name>
        <servlet-class>controller.QuizServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/ulist</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/userForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/storeUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/useredit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/userdelete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/question</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/play</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/questionAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/questionedit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/questiondelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/storeQuestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/updateQuestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/qlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>quiz</servlet-name>
        <url-pattern>/playquiz</url-pattern>
    </servlet-mapping>
</web-app>